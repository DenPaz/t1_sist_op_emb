root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{c,h}]
indent_style = space
indent_size = 4
max_line_length = 120

[*.{s,S,asm}]
indent_style = tab
tab_width = 8

[Makefile]
indent_style = tab

[*.{xml,mc3,xdg,xtg}]
indent_style = space
indent_size = 4
